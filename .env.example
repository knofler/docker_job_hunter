# Frontend (Next.js) environment variables
NEXT_PUBLIC_API_URL=http://localhost:8010
NEXT_PUBLIC_API_URL_LOCAL=http://localhost:8010
NEXT_PUBLIC_API_URL_INTERNAL=http://backend:8000
NEXT_PUBLIC_API_FORCE_REMOTE=1
NEXT_PUBLIC_USE_DUMMY_DATA=true

# Shared secrets (copy into .env, do not commit)
ADMIN_API_KEY=changeme-admin-token
LLM_SETTINGS_SECRET_KEY=changeme-secret

# Backend (FastAPI) environment variables
MONGO_URI=mongodb://mongo:27017/jobhunter-app
MONGO_DB_NAME=jobhunter-app
RUN_STARTUP_SEED=true

# LLM Configuration - Default Provider (choose: openai, deepseek, anthropic, google, bedrock)
LLM_DEFAULT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here
GOOGLE_GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GOOGLE_GEMINI_MODEL=gemini-1.5-flash

# DeepSeek Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_SESSION_TOKEN=
AWS_REGION=us-east-1
BEDROCK_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# LLM Settings
DISABLE_ENV_LLM_KEYS=false
